{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist/",
    "lib": ["es2018", "dom", "esnext", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@fonts/*": ["./src/fonts/*"],
      "@images/*": ["./src/images/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["src"]
}
